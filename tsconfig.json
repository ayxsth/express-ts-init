{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@enums/*": ["src/enums/*"],
      "@routes/*": ["src/routes/*"],
      "@errors/*": ["src/errors/*"],
      "@schemas/*": ["src/schemas/*"],
      "@services/*": ["src/services/*"],
      "@constants/*": ["src/constants/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@controllers/*": ["src/controllers/*"]
    }
  },
  "include": ["src/**/*"]
}
